---
layout: null
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title type="html">{{ site.title | smartify | xml_escape }}</title>
  <subtitle>{{ site.description | xml_escape }}</subtitle>
  <link rel="alternate" type="text/html" href="{{ '/' | absolute_url }}" />
  <link rel="self" type="application/atom+xml" href="{{ page.url | absolute_url }}" />
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ "/" | absolute_url | xml_escape }}</id>
  {% assign news = site.data.news | sort: "date" | reverse %}
  {% for item in news %}
  <entry>
    <title type="html">{{ item.news | smartify | strip_html | normalize_whitespace | xml_escape }}</title>
    {% if item.link %}
    <link rel="alternate" type="text/html" href="{{ item.link | xml_escape }}" title="{{ item.news | xml_escape }}" />
    {% endif %}
    <published>{{ item.date | date_to_xmlschema }}</published>
    <updated>{{ item.date | date_to_xmlschema }}</updated>
    <!-- <id>{{ item.id | absolute_url | xml_escape }}</id> -->
    <author>
      <name>{{ site.title | xml_escape }}</name>
    </author>
    {% assign thedate = item.date | date: site.date_format | append: ": " %}
    <content type="html" xml:base="{{ item.link | absolute_url | xml_escape }}">{{ item.news | prepend: thedate | markdownify | strip | xml_escape }}</content>
  </entry>
  {% endfor %}
</feed>
