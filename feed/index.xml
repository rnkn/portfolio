---
layout: null
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title type="text" xml:lang="en">{{ site.title | smartify | xml_escape }}</title>
  <subtitle>{{ site.description | smartify | xml_escape }}</subtitle>
  <link rel="self" type="application/atom+xml" href="{{ page.url | absolute_url }}" />
  <link rel="alternate" type="text/html" href="{{ site.base_url | absolute_url }}" />
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.base_url | absolute_url | append: "blog" | xml_escape }}</id>
  <author>
    <name>{{ site.title | xml_escape }}</name>
  </author>
  <rights>{{ site.copyright | smartify | xml_escape }}</rights>
  {% for item in site.posts %}
  <entry>
    <title>{{ item.title | xml_escape }}</title>
    <link href="{{ item.url | absolute_url | xml_escape }}" />
    <published>{{ item.date | date_to_xmlschema }}</published>
    <updated>{{ item.date | date_to_xmlschema }}</updated>
    <id>{{ item.id | absolute_url| xml_escape }}</id>
    <content type="html">{{ item.content | markdownify | xml_escape }}</content>
  </entry>
  {% endfor %}
</feed>
